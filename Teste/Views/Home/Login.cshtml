@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="row justify-content-center">
    <did id="divback" class="col-4">
        <div class="row justify-content-center">
            <div class="col">
                <div class="row">
                    <i class="fa active"></i>
                </div>
                <div class="row grid justify-content-center">
                    <h2>WEB APLICATION</h2>
                </div>
                <div class="row">
                    <div class="input-group mb-3 input-group-sm">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-transparent text-white"><i class="fas fa-at"></i></span>
                        </div>
                        <input id="txtLogin" type="text" placeholder="E-MAIL" class="form-control bg-transparent text-white">
                    </div>
                </div>
                <div class="row">
                    <div class="input-group mb-3 input-group-sm">
                        <div class="input-group-prepend">
                            <span class="input-group-text bg-transparent text-white"><i class="fas fa-key"></i></span>
                        </div>
                        <input id="txtPass" type="password" placeholder="SENHA" class="form-control bg-transparent text-white">
                        <div class="input-group-append">
                            <span id="revelaPass" class="input-group-text bg-transparent text-white"><i id="icRevPass" class="fas fa-eye"></i></span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </did>
</div>