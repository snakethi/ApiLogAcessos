<div id="UpdUsuario" class="p-5 col-12 col-lg-5 align-content-center justify-content-center divback d-none">
    <div class="row align-content-center justify-content-center">
        <div class="col-11 col-lg-6 d-flex align-content-center justify-content-center">
            <img class="imgLogoDentro" src="~/Source/user.png" />
        </div>
    </div>
    <div class="row m-2 d-flex align-content-center justify-content-center">
        <div class="col d-flex align-content-center justify-content-center">
            <h2 class="text-white">Alterar Usuario de Usuario</h2>
        </div>
    </div>

    <div class="row mt-2 align-content-center justify-content-center">
        <div class="col-11 col-xl-6">
            <div class="input-group mb-3 input-group-sm">
                <div id="dvNomeUpd" class="input-group-prepend">
                    <span class="input-group-text bg-transparent text-white"><i class="fas fa-user-circle"></i></span>
                </div>
                <input id="txtNomeUpd" type="text" placeholder="COLOQUE SEU NOME!" class="form-control bg-transparent text-white" onblur="Valida('Valida','NomeUpd')" onfocus="Valida('','NomeUpd')" value="@ViewBag.Nome" required>
                <div id="ValidaNomeUpd" class="invalid-feedback">
                    PREENCHA O CAMPO COM SEU NOME!
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-2 align-content-center justify-content-center">
        <div class="col-11 col-xl-6">
            <div class="input-group mb-3 input-group-sm">
                <div id="dvLoginUpd" class="input-group-prepend">
                    <span class="input-group-text bg-transparent text-white"><i class="fas fa-user-circle"></i></span>
                </div>
                <input id="txtLoginUpd" type="text" placeholder="COLOQUE SEU LOGIN!" class="form-control bg-transparent text-white" onblur="Valida('Valida','LoginUpd')"  onfocus="Valida('','LoginUpd')" value="@ViewBag.Login" required>
                <div id="ValidaLoginUpd" class="invalid-feedback">
                    PREENCHA O CAMPO COM SEU Login!
                </div>
            </div>
        </div>
    </div>


    <div class="row mt-2 align-content-center justify-content-center">
        <div class="col-11 col-xl-6">
            <div class="row">
                <div class="input-group mb-3 input-group-sm">
                    <div id="dvPassUpd" class="input-group-prepend">
                        <span class="input-group-text bg-transparent text-white"><i class="fas fa-key"></i></span>
                    </div>
                    <input id="txtPassUpd" type="password" placeholder="COLOQUE SUA SENHA!" class="form-control bg-transparent text-white"
                           onfocus="HabilitaVSenha('Valida','PassUpd')" onblur="HabilitaVSenha('','PassUpd')" onkeyup="ValidaSenha('PassUpd')" pattern="" required>
                    <div class="input-group-append">
                        <span id="revelaPassUpd" class="input-group-text bg-transparent text-white"><i id="icRevPassUpd" class="fas fa-eye"></i></span>
                    </div>
                </div>
            </div>
            <div id="VerificaPassUpd" class="row d-none">
                <h3 class="text-white">A Senha deve Conter :</h3>
                <p id="MPassUpd" class="invalid">Uma <b>Letra</b> Maiuscula</p>
                <p id="mPassUpd" class="invalid">Uma <b>Letra</b> Miuscula</p>
                <p id="NPassUpd" class="invalid">Um <b>Numero</b></p>
                <p id="SPassUpd" class="invalid">Um <b>Caracter Especial</b></p>
                <p id="TPassUpd" class="invalid">No Minimo <b>10 caracteres</b></p>
                <p id="BPassUpd" class="invalid">Não Conter <b>espaços em branco</b></p>
                <p id="RPassUpd" class="invalid">Não Conter <b>caracters repeditos</b></p>
            </div>

        </div>
    </div>


    <div class="row mt-2 align-content-center justify-content-center">
        <div class="col-11 col-xl-6">
            <div class="input-group mb-3 input-group-sm">
                <div id="dvPassUpd2" class="input-group-prepend">
                    <span class="input-group-text bg-transparent text-white"><i class="fas fa-key"></i></span>
                </div>
                <input id="txtPassUpd2" type="password" placeholder="CONFIRME SUA SENHA!" class="form-control bg-transparent text-white"
                       onblur="ValidaSenhaS('Valida','PassUpd','PassUpd2')" onkeyup="ValidaSenhaS('Valida','PassUpd','PassUpd2')" onfocus="ValidaSenhaS('','PassUpd','PassUpd2')" required>
                <div class="input-group-append">
                    <span id="revelaPassUpd2" class="input-group-text bg-transparent text-white"><i id="icRevPassUpd2" class="fas fa-eye"></i></span>
                </div>
                <div id="ValidaSenhasUpd2" class="invalid-feedback">
                    SENHAS NÃO SÃO IGUAIS!
                </div>
            </div>
        </div>
    </div>
    <div class="row mt-2 align-content-center justify-content-center">
        <div class="col-11 col-xl-6">

            @{
                if (@ViewBag.ADM)
                {
                    <div class="form-check form-switch">
                        <input id="ADMCheckUpd" class="form-check-input" type="checkbox" checked>
                        <label class="form-check-label text-white" for="ADMCheckUpd">ADMINISTRADOR</label>
                    </div>
                }
                else
                {
                    <div class="form-check form-switch">
                        <input id="ADMCheckUpd" class="form-check-input" type="checkbox">
                        <label class="form-check-label text-white" for="ADMCheckUpd">ADMINISTRADOR</label>
                    </div>
                }

            }
        </div>
    </div>

    <div class="row mt-2 align-content-center justify-content-center">
        <div class="col-11 col-lg-4 d-flex align-content-center justify-content-center">
            <button id="Login" type="button" onclick="AlterarUser('@ViewBag.ID')" class="btn-success w-50">Salvar</button>
        </div>
    </div>

</div>

